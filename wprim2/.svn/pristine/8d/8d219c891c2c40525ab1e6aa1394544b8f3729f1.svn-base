	@Override
	public void update(UploadFile file, Journal journal, String ISSN1,
			String ISSN2, String EISSN1, String EISSN2) {
		// TODO Auto-generated method stub
		if (file != null) {
			journal.set("picture", "/picture/" + file.getFileName());
